<html>
<head>
    <title>Bingo</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<style>
body {
  margin: 0;
  padding: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background-color: white;
}

.tablero{
  margin: 2em;
  display: flex;
  flex-direction: column;

}
.fila {
    display: flex;
}
.fila > div{
  border: 1px solid rgb(21, 70, 21);
  width: 4em;
  height: 4em;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 2em;
  text-align: center;
}

.celda{
  background: #2ECC40;
  color: #111;
}
</style>
<body>
    <div class = "tablero">
      {% for fila in matriz %}
      <div class = "fila">
        {% for celda in fila %}
        {% if celda == 0 %}
          <div></div>
        {% else %}
          <div class = "celda"> {{celda}} </div>
        {% endif %}
        {% endfor %}
      </div>
      {% endfor %}

    </div>
</body>
</html>